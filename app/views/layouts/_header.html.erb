<% if user_signed_in? %>
  <div class="container logo-blog">
    <div class="row">
      <div class="col-md-6">
        <div><%= link_to image_tag("slide-gallery-images/jvGTCDL.png", size: "60x60") %><%= link_to "iFaker Blog", "#" %></div>
        <div class="des-logo">Love makes the world go around</div>
      </div>
      <div class="col-md-4">
      </div>
      <div class="col-md-2 logo-icon">
        <%= link_to "#" do %>
          <i class="fa fa-facebook icon"></i>
        <% end %>
        <%= link_to "#" do %>
          <i class="fa fa-twitter icon"></i>
        <% end %>
        <%= link_to "#" do %>
          <i class="fa fa-google-plus icon"></i>
        <% end %>
      </div>
    </div>
  </div>
  <header class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <%= link_to t("static_page.title"), root_path, id: "logo" %>
      </div>
      <ul class="nav navbar-nav">
        <% if current_user.admin? %>
          <li>
            <%= link_to t("admin.dashboard"), "#",
             id: "dropdownMenu1", data: {toggle: "dropdown"},
             aria: {haspopup: "true", expanded: "true"} %>
             <ul class="dropdown-menu", aria-labelledby="dropdownMenu1">
               <li><%= link_to t("dashboard-album-all"), admin_albums_path %></li>
               <li><%= link_to t("dashboard-album-new"), new_admin_album_path %></li>
               <li><%= link_to t("dashboard-blog-new"), new_blog_path %></li>
             </ul>
          </li>
        <% end %>
        <li><%= link_to t("static_page.home"), root_path %></li>
        <li><%= link_to t("static_page.help"), help_path %></li>
        <li ng-click="fade1()"><%= link_to t("status_page.gallery"), "#gallery" %></li>
        <li ng-click="fade2()"><%= link_to t("status_page.blog"), "#blog" %></li>
        <li ng-click="fade3()"><%= link_to t("status_page.shop"), "#product" %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to t("static_page.log_out"), destroy_user_session_path, method: :delete, class: "logo" %></li>
        <% else %>
          <li><%= link_to t("static_page.log_in"),  new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </header>
<% end %>
