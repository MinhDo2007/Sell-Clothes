<div id="product">
  <hr class="section-divider">
  <div class="title">
    <%= t("shop.title") %>
  </div>
  <div class="product-infor">
    <hr>
    <ul class="list-product">
      <% @products.each_with_index do |product, index| %>
        <li><%= link_to image_tag(product.img.medium, data: {toggle: "modal", target: "#myModal-#{index}"}, class: "product-img img-thumbnail"),  "javascript:void(0)", class: "product-img" if product.img.present? %></li>
      <% end %>
    </ul>
  </div>
</div>
<hr>
