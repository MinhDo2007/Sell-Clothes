<div id="blogs" ng-controller="blogsCtr">
  <div class="row">
    <div class="infor-profile col-md-2">
      <div class="avatar">
      </div>
      <br>
      <b><%= t("blogs.hello", name: current_user.name) %></b><br>
      <div class="user-description">
        I'm Minion and I'm a coder. Welcome to my humble blog. I love coding and blogging and taking great photos.
      </div>
      <hr>
      <div class="list-detail-infor">
        <ul>
        <li><%= link_to current_user.name, blogs_path, 'ng-class' => "{'current-url': url === '/blogs'}" %></li>
        <li><%= link_to "ABOUT", about_path, 'ng-class' => "{'current-url': url === '/about'}" %></li>
        <li><%= link_to "POST FORTMAT", about_path %>
          <ul class="sub-menu">
            <li><%= link_to "STANDARD", "#" %></li>
            <li><%= link_to "LINK", "#" %></li>
            <li><%= link_to "GALLERY", "#" %></li>
            <li><%= link_to "QUOTE", "#" %></li>
            <li><%= link_to "VIDEO", "#" %></li>
          </ul>
        </li>
        <li><%= link_to "CONTACT", "#" %></li>
        </ul>
      </div>
    </div>
    <div class="infor-blogs col-md-7">
      <% @blogs.each do |blog| %>
        <div class="title-blogs">
          <%= link_to blog.title, blog_path(blog.id) %>
        </div>
        <div class="author-blogs">
          <span>By </span><span><%= link_to  User.find(blog.user_id).name, "" %></span>
        </div>
        <span class="entry-hr"><span class="text-blogs"><i class="fa fa-file-text-o" aria-hidden="true"></i></span></span>
        <div class="time-blogs">
          <span class="time">
            <%= link_to "javascript:void(0)" do %>
              <i class="fa fa-calendar">
                <%= l blog.created_at, format: :short %>
              </i>
            <% end %>
          </span>
          <span class="comments">
            <%= link_to "javascript:void(0)" do %>
              <i class="fa fa-comments-o">
                "comments"
              </i>
            <% end %>
          </span>
        </div>
        <div class="image-blogs">
          <p><%= image_tag blog.image.large %></p>
        </div>
        <div class="des-blogs">
          <%= blog.content %>
        </div>
        <div class="btn-reading">
          <%= link_to "Continue Reading", "#", class: "btn btn-default" %>
        </div>
        <hr></br></br>
      <% end %>
    </div>
    <div class="other-blogs col-md-3">
      <div class="img-blog">
        <ul>
          <% @blogs_sort.each do |blog| %>
            <li><%= image_tag blog.image.medium %></li>
          <% end %>
        </ul>
      </div>
      <br><hr><br>
      <div ng-controller="tabCtr">
        <div class="tab-infor">
          <ul>
            <li>
              <%= link_to "POSTS", "javascript:void(0)", class: "btn btn-default",
               'ng-click' => 'setTab(1)', 'ng-class' => "{'active': number === 1}" %>
            </li>
            <li>
              <%= link_to "COMMENTS", "javascript:void(0)", class: "btn btn-default",
               'ng-click' => 'setTab(2)', 'ng-class' => "{'active': number === 2}" %>
            </li>
            <li>
              <%= link_to "TAGS", "javascript:void(0)", class: "btn btn-default",
               'ng-click' => 'setTab(3)', 'ng-class' => "{'active': number === 3}" %>
            </li>
          </ul>
        </div>
        <div class="detail-infor">
          <div ng-show="number === 1">
            <ul>
              <% @blogs.each do |blog| %>
                <li>
                  <span><i class="fa fa-file-text-o"></i></span>
                  <span><%= blog.title %></span>
                </li>
              <% end %>
            </ul>
          </div>
          <div ng-show="number === 2">
            comment1
          </div>
          <div ng-show="number === 3">
            tag1
          </div>
        </div>
        <br><hr><br>
      </div>
    </div>
  </div>
</div>
