<div id="blogs" ng-controller="blogsCtr">
  <div class="row">
    <div class="infor-profile col-md-2">
      <%= render "profile_blog" %>
    </div>
    <div class="infor-blogs col-md-7">
      <% @blogs.each do |blog| %>
        <%= render "infor_blog", blog: blog %>
        <div class="des-blogs display-line">
          <%= blog.content %>
        </div>
        <div class="btn-reading">
          <%= link_to "Continue Reading", blog_path(blog.id), class: "btn btn-default" %>
        </div>
        <hr></br></br>
      <% end %>
    </div>
    <div class="other-blogs col-md-3">
        <%= render "other_infor_blog" %>
    </div>
  </div>
</div>
